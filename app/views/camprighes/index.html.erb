<p id="notice"><%= notice %></p>

<h1>Listing Camprighes</h1>

<table>
  <thead>
    <tr>
      <th>Camp</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @camprighes.each do |camprighe| %>
      <tr>
        <td><%= camprighe.camp_id %></td>
        <td><%= camprighe.contact_id %></td>
        <td><%= link_to 'Show', camprighe %></td>
        <td><%= link_to 'Edit', edit_camprighe_path(camprighe) %></td>
        <td><%= link_to 'Destroy', camprighe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

