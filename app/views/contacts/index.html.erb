<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cognome</th>
      <th>Telefono</th>
      <th>Email</th>
      <th>Sesso</th>
      <th>Citta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.nome %></td>
        <td><%= contact.cognome %></td>
        <td><%= contact.telefono %></td>
        <td><%= contact.email %></td>
        <td><%= contact.sesso %></td>
        <td><%= contact.citta %></td>
        <td><%= link_to 'Show', contact, class: "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), class: "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

