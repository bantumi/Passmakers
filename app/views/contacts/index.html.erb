<h1>Listing Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cognome</th>
      <th>Telefono</th>
      <th>Email</th>
      <th>Sesso</th>
      <th>Citta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.nome %></td>
        <td><%= contact.cognome %></td>
        <td><%= contact.telefono %></td>
        <td><%= contact.email %></td>
        <td><%= contact.sesso %></td>
        <td><%= contact.citta %></td>
        <td><%= link_to contact do %>
          <i class="small material-icons left">zoom_in</i>
        <% end %>
        </td>
        <td><%= link_to edit_contact_path(contact) do %>
          <i class="small material-icons left">mode_edit</i>
        <% end %>
        </td>
        <td><%= link_to contact, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="small material-icons left">delete</i>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path , class: "waves-effect waves-light btn"%>
<br>