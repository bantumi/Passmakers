<p id="notice"><%= notice %></p>

<h1>Listing Beacons</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Descrizione</th>
      <th>UUID</th>
      <th>Major</th>
      <th>Minor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beacons.each do |beacon| %>
      <tr>
        <td><%= beacon.id %></td>
        <td><%= beacon.descrizione %></td>
        <td><%= beacon.UUID %></td>
        <td><%= beacon.major %></td>
        <td><%= beacon.minor %></td>
        <td><%= link_to beacon do %>
          <i class="small material-icons left">zoom_in</i>
        <% end %>
        </td>
        <td><%= link_to edit_beacon_path(beacon) do %>
          <i class="small material-icons left">mode_edit</i>
        <% end %>
        </td>
        <td><%= link_to beacon, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="small material-icons left">delete</i>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
<%= link_to 'New Beacon', new_beacon_path , class: "waves-effect waves-light btn-large" %>
<br>
