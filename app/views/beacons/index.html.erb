<p id="notice"><%= notice %></p>

<h1>Listing Beacons</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Descrizione</th>
      <th>UUID</th>
      <th>Major</th>
      <th>Minor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beacons.each do |beacon| %>
      <tr>
        <td><%= beacon.id %></td>
        <td><%= beacon.descrizione %></td>
        <td><%= beacon.UUID %></td>
        <td><%= beacon.major %></td>
        <td><%= beacon.minor %></td>
        <td><%= link_to 'Show', beacon, class: "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Edit', edit_beacon_path(beacon), class: "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Destroy', beacon, method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
